{
  "compilerOptions": {
    "target": "es2020", 
    "lib": ["es2020"], 
    "module": "commonjs",    
    "outDir": "dist",
    "rootDir": "src",    
    "sourceMap": true, 
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noImplicitAny": true,					
    "strictNullChecks": true,				
    "strictPropertyInitialization": true,	
    "preserveConstEnums": true,				
  },
  "typedocOptions": {
    "out": "docs",
    "exclude": "src/*Demo.ts"
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "tests"]
}
